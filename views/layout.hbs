    <form action="/profile" class="ml-auto">
      <button type="submit">Profile</button>
    </form>  
    <form action="/logout" class="mr-10 sm:mr-20 md:mr-40 lg:mr-60 2xl:mr-80">
      <button type="submit">Sign-Out</button>
    </form> 
  {{/if}}
  </nav>
  <div class="  h-5/6  ">
    {{{body}}}
  </div>
